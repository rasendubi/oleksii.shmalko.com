---
import '@fontsource/source-code-pro/400.css?inline';
import '@fontsource/source-code-pro/500.css?inline';

import 'katex/dist/katex.css';

import font400 from '../../Change-Regular-all.woff2';
import font400italic from '../../Change-RegularItalic-all.woff2';
import font700 from '../../Change-SemiBold-all.woff2';

import Footer from '../components/Footer.astro';

const { title, image, description } = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const ogImage = image ? image : new URL('/gravatar.png', Astro.site);
---

<!doctype html>
<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />

    <link
      rel="preload"
      href={font400}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={font700}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={font400italic}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />

    <link rel="icon" type="image/svg" href="/favicon.svg" />
    <meta name="telegram:channel" content="@dev_rasen" />

    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Oleksii Shmalko" />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    {
      description && (
        <>
          <meta name="description" content={description} />
          <meta property="og:description" content={description} />
        </>
      )
    }
    <meta property="og:url" content={canonicalUrl} />
    <link rel="canonical" href={canonicalUrl} />

    <link
      rel="webmention"
      href="https://webmention.io/oleksii.shmalko.com/webmention"
    />
    <link
      rel="pingback"
      href="https://webmention.io/oleksii.shmalko.com/xmlrpc"
    />

    <script src="https://cdn.usefathom.com/script.js" data-site="PCSQWUMO" async
    ></script>

    <slot name="head" />
  </head>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      @font-face {
        font-weight: 400;
        font-family: Change;
        src: url(../../Change-Regular-all.woff2) format('woff2');
        font-display: swap;
      }
      @font-face {
        font-family: Change;
        font-style: italic;
        src: url(../../Change-RegularItalic-all.woff2) format('woff2');
        font-display: swap;
      }
      @font-face {
        font-family: Change;
        font-weight: 700;
        src: url(../../Change-SemiBold-all.woff2) format('woff2');
        font-display: swap;
      }
      :root {
        /* = font-size * line-height */
        --primary-spacing: 32px;
        --secondary-spacing: 16px;
        --horizontal-spacing: 24px;
        --primary-font-size: 22px;
        --primary-line-height: 1.454545;
        --font-serif: Change;
        --font-monospace: 'Source Code Pro', monospace;
        --bg-dim: #f2f2f2;
        --fg-dim: #595959;
        --fg-alt: #193668;

        --border: #9f9f9f;
        --green-alt: #315b00;
        --green-warmer: #316500;
        --green-subtle-bg: #aecf90;
        --blue-warmer: #3548cf;
        --blue-alt: #2544bb;
        --blue-subtle-bg: #ccdfff;
        --red-alt: #972500;
        --red-subtle-bg: #f2b0a2;
        --cyan-intense: #005f88;
        --cyan-alt-other: #005a5f;
        --magenta-alt: #8f0075;
      }
      html,
      body {
        padding: 0;
        margin: 0;
        font-family: var(--font-serif);
        font-variant-ligatures: common-ligatures discretionary-ligatures;
        container-type: inline-size;
      }
      /* always show scroll bar. Otherwise, transitions might look junky. */
      html {
        overflow-y: scroll;
      }

      main {
        position: relative;
        display: flex;
        flex-direction: column;

        font-size: var(--primary-font-size);
        line-height: var(--primary-line-height);

        max-width: 750px;
        height: 100%;
        margin: 0 auto;
        padding: 24px var(--horizontal-spacing) 0px;

        /* Allow breaking words if text overflows (very long words or links) */
        word-wrap: break-word;
        overflow-wrap: break-word;
      }

      code {
        font-family: var(--font-monospace);
        font-size: 0.8em;
      }

      html {
        box-sizing: border-box;
        font-size: 16px;
      }

      *,
      *:before,
      *:after {
        box-sizing: inherit;
      }

      body,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p,
      ul,
      ol,
      dl {
        margin: 0;
        padding: 0;
        font-weight: normal;
      }

      ul,
      ol,
      dl {
        padding-left: 24px;
      }
      ul {
        list-style: disc;
      }
      ul ul {
        list-style: circle;
      }
      ol {
        list-style: decimal;
      }
      /* add padding to clearly separate adjacent lists of the same type */
      ul + ul,
      ol + ol {
        margin-top: var(--primary-spacing);
      }

      img {
        max-width: 100%;
        height: auto;
      }
      figcaption {
        font-size: 0.9em;
        text-align: center;
      }

      code.inline-code {
        padding: 2px 4px;
        border: thin solid var(--border);
        border-radius: 4px;
      }
      code.inline-verbatim {
        /* color: var(--magenta-alt); */
      }

      .todo-keyword {
        font-family: var(--font-monospace);
      }
      .todo-keyword.TODO {
        color: #1111ee;
      }
      .todo-keyword.DONE {
        color: #505050;
      }
      .priority {
        color: #721045;
      }
      .tags {
        color: #541f4f;
      }
      .timestamp {
        color: #30517f;
        white-space: nowrap;
      }

      .center {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
      }

      h1 {
        font-size: 32px;
        font-weight: 700;
        margin-top: 8px;
        margin-bottom: 16px;
      }
      h2,
      h3,
      h4 {
        font-weight: 700;
        font-variant-caps: small-caps;
        letter-spacing: 0.04em;
        margin-top: calc(3 * var(--secondary-spacing));
        margin-bottom: var(--secondary-spacing);
      }
      h2 {
        font-size: 24px;
      }
      h3 {
        font-size: 20px;
      }
      h4 {
        font-size: 16px;
      }

      p,
      ul,
      ol,
      dl,
      table,
      blockquote,
      pre,
      pre.verse,
      .block,
      .src-block,
      .math-display,
      pre[class^='language-'],
      .footnote-definition {
        margin: 0 0 var(--secondary-spacing) 0;
      }

      sup {
        font-size: inherit;
        vertical-align: inherit;
        font-variant-position: super;
      }
      sub {
        font-size: inherit;
        vertical-align: inherit;
        font-variant-position: sub;
      }
      .footref {
        background-color: none;
      }
      .footnote-definition > sup:first-child {
        float: left;
        margin-right: 8px;
      }
      .footdef {
        display: inline;
      }

      dt {
        float: left;
        display: list-item;
        list-style-type: disc;
        font-weight: 700;
      }
      dt::after {
        content: ':';
        margin-right: 4px;
      }
      dt,
      dd {
        margin-left: 0px;
      }
      dd > p:first-child::before {
        /*
          * Add zero-width space to dd, so that dd always occupies
          * some vertical space. Otherwise, the next dt will collapse
          * into the previous one if dd has no text.
          */
        content: '${' \u200b'}';
      }
      /* For dd, use larger padding if first child is not the only
      * child. So that next element is properly wrapped to the next
      * line and is not affected by dt's float:left. (Happens when
      * tag contains a list.)
      */
      dd > p,
      dd > ul,
      dd > ol,
      dd > dl,
      dd > table,
      dd > blockquote,
      dd > .block,
      dd > pre,
      li > p,
      li > ul,
      li > ol,
      li > dl,
      li > table,
      li > blockquote,
      li > .block,
      li > pre,
      li > pre.verse,
      li > .src-block,
      li > pre[class^='language-'] {
        margin-bottom: 8px;
      }
      dd > :last-child {
        margin-bottom: 0;
      }
      li {
        margin-top: 8px;
        margin-bottom: 8px;
      }
      .footnotes {
        display: flex;
        flex-direction: column;
      }

      pre {
        overflow: auto;
        line-height: 1.3;
      }

      blockquote,
      pre.verse,
      .block {
        display: block;
        padding: 8px 16px;
        border-left: 3px solid var(--border);
        background-color: var(--bg-dim);
      }
      blockquote > :last-child,
      .block > :last-child {
        margin-bottom: 0;
      }

      pre.src-block,
      pre[class^='language-'] {
        border-radius: 4px;
        outline: thin solid var(--border);
      }
      /* Allow top-level code blocks to grow to full-screen. There's similar code for tables */
      .top-level > pre.src-block,
      .top-level > pre[class^='language-'] {
        border-radius: 0;
        background-color: var(--bg-dim);

        width: 100vw;
        width: 100cqw;
        /* The margin/padding below allow wide code to be scrolled in
             full screen width, but defaulting to align the left side
             of the code with body text.  */
        margin-left: calc(-1 * (100vw - 100%) / 2);
        margin-left: calc(-1 * (100cqw - 100%) / 2);
        padding-left: calc((100vw - 100%) / 2);
        padding-left: calc((100cqw - 100%) / 2);
      }
      pre.src-block,
      pre[class^='language-'] {
        padding: 8px;
      }
      pre > code {
        width: fit-content;
        min-width: 100%;
        display: block;
      }

      .token.comment {
        color: #505050;
      }
      .token.keyword {
        font-weight: 700;
        color: #5317ac;
      }
      .token.string {
        color: #2544bb;
      }
      .token.class-name,
      .token.function,
      .token.variable {
        color: #721045;
        font-weight: 500;
      }
      .token.car {
        color: #00538b;
      }
      .token.builtin {
        color: #00538b;
        font-weight: 500;
      }
      .token.punctuation {
        color: #56576d;
      }

      /* make top-level images slightly wider */
      .top-level > p > picture:only-child {
        display: flex;
        justify-content: center;
        width: calc(100% + 2 * var(--horizontal-spacing));
        margin-left: calc(-1 * var(--horizontal-spacing));
        margin-right: calc(-1 * var(--horizontal-spacing));
      }
      img {
        object-fit: scale-down;
      }

      /* allow top-level quotes to be slightly wider */
      .top-level > blockquote,
      .top-level > pre.verse,
      .top-level > .block,
      .top-level > .block-clearfix > blockquote,
      .top-level > .block-clearfix > pre.verse,
      .top-level > .block-clearfix > .block {
        border-left: 3px solid var(--border);
        margin-left: -17px; /* -3 for border */
        margin-right: -16px;
        padding-left: 16px;
        padding-right: 16px;
      }

      article,
      .top-level {
        position: relative;
      }

      .top-level table {
        margin-bottom: var(--primary-spacing);
        display: block;
        border-collapse: collapse;
        font-size: 0.9em;
        overflow-x: auto;
      }
      /* Allow top-level table to grow to full-screen. */
      .top-level > table {
        width: 100vw;
        width: 100cqw;
        /* The margin/padding below allow wide tables to be scrolled in full screen width, but defaulting to aligning the left side of the table with body text. */
        margin-left: calc(-1 * (100vw - 100%) / 2);
        margin-left: calc(-1 * (100cqw - 100%) / 2);
        padding-left: calc((100vw - 100%) / 2 - var(--horizontal-spacing));
        padding-left: calc((100cqw - 100%) / 2 - var(--horizontal-spacing));
      }

      .top-level th,
      .top-level td {
        padding: 8px var(--horizontal-spacing);
      }
      .top-level thead {
        border-bottom: 2px solid var(--border);
      }
      .top-level tbody {
        border-top: 2px solid var(--border);
      }
      .top-level thead tr {
        /* background-color: #e5e5e5; */
        text-align: left;
        font-weight: 700;
      }
      .top-level tbody tr {
        border-top: thin solid var(--border);
        vertical-align: baseline;
      }

      /* If first element of the note is a definition list, pull it up
      * closer to the title. It is either my custom metadata list (tags,
      * source, etc.) or an auto-generated from bibtex file (authors, year,
      * etc.)
      */
      .top-level > dl:first-child,
      header + dl {
        padding-left: 0px;
        margin-top: calc(-1 * var(--secondary-spacing) + 4px);
        margin-bottom: var(--primary-spacing);
        font-size: 20px;
      }
      .top-level > dl:first-child > dt,
      .top-level > dl:first-child > dd,
      header + dl > dt,
      header + dl > dd {
        list-style-type: none;
        margin-left: 0;
      }

      /* asides */
      .block-clearfix {
        position: relative;
      }
      aside {
        background-color: var(--bg-dim);
        border-radius: 4px;
        margin: 0 -16px var(--secondary-spacing);
        padding: 8px 16px;
      }
      aside > *:last-child {
        margin-bottom: 0px;
      }
      /* asides are moving to the right */
      @media (min-width: 1280px) {
        .block-clearfix aside {
          background: transparent;
          color: var(--fg-alt);
          position: absolute;
          /* article and .block-clearfix are narrower than
           * main. Compensate for main's padding.
           *
           * Some top-level elements are allowed to be as wide as the
           * main container, so adding extra 16px of margin, so we
           * don't touch them.
           */
          left: calc(100% + 16px);
          width: calc((100vw - 750px) / 2 - 16px);
          max-width: 360px;
          padding: 0;
          padding-right: var(--horizontal-spacing);
        }
        .block-clearfix aside {
          top: 0px;
        }
        .block-clearfix aside,
        /* needed for specificity */
        .top-level > .block-clearfix > aside {
          margin-left: 16px;
          margin-right: var(--horizontal-spacing);
        }
      }

      .katex {
        font-size: 0.9em !important;
      }

      /* front-page */
      .block-categories {
        display: flex;
        flex-wrap: wrap;
        column-gap: 64px;
        margin-top: -16px; /* negate prev paragraph spacing */
        margin-bottom: 32px;
      }
      @media (min-width: 950px) {
        .block-categories {
          width: calc(100vw - (100vw - 750px) / 2 - 48px);
          max-width: 960px;
          align-self: flex-start;
        }
        .block-categories > section {
          max-width: 420px;
        }
        .block-categories ul {
          padding-left: 0px;
        }
      }
      .block-small {
        font-size: 18px;
      }

      .block-important {
        background: var(--bg-dim);
        margin: -4px;
        padding: 4px;
        border-radius: 4px;
      }
      .block-important > :last-child {
        margin-bottom: 0;
      }
    </style>
  </body>
</html>
