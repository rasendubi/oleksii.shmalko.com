---
import classes from './Link.module.css';
import { resolveId } from '../lib/posts.ts';

const { class: className, href, ...props } = Astro.props;

let link = href;
console.log('link', link);
const url = new URL(link, 'file://');
if (url.protocol === 'id:') {
  link = await resolveId(url.pathname);
  console.log('resolved to', link);
}

const external = url.protocol === 'http:' || url.protocol === 'https:';
---

<a
  rel={external ? 'noopener' : 'prefetch'}
  target={external ? '_blank' : undefined}
  preload={!external}
  {...props}
  href={link}
  class:list={[classes.link, { external }, className]}
  ><slot />{
    external && (
      <svg
        aria-hidden="true"
        focusable="false"
        data-prefix="fas"
        data-icon="external-link-alt"
        class={classes['fa-external-link-alt']}
        role="img"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
      >
        <path d="M432,320H400a16,16,0,0,0-16,16V448H64V128H208a16,16,0,0,0,16-16V80a16,16,0,0,0-16-16H48A48,48,0,0,0,0,112V464a48,48,0,0,0,48,48H400a48,48,0,0,0,48-48V336A16,16,0,0,0,432,320ZM488,0h-128c-21.37,0-32.05,25.91-17,41l35.73,35.73L135,320.37a24,24,0,0,0,0,34L157.67,377a24,24,0,0,0,34,0L435.28,133.32,471,169c15,15,41,4.5,41-17V24A24,24,0,0,0,488,0Z" />
      </svg>
    )
  }</a
>
